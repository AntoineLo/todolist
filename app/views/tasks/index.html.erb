<%= link_to "Create a new task", new_task_path %>

<% @tasks.each do |task| %>
  <h3><%= link_to task.name, task_path(task) %></h3>
  <p><%= task.duedate %></p>
  <p>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure?"} %>
  </p>
<% end %>
